generator client {
  provider = "prisma-client-js"
  // ✅ deixe o output padrão (NÃO defina output absoluto)
  // ✅ deixe binaryTargets padrão também (Prisma escolhe o certo no Render)
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Member {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  nome               String
  email              String?
  telefone           String?
  dataNascimento     DateTime?
  endereco           String?
  grupoPastoral      Boolean  @default(false)
  grupoDevocional    Boolean  @default(false)
  grupoVisitantes    Boolean  @default(false)
  grupoConvite       Boolean  @default(false)
  grupoSumidos       Boolean  @default(false)
  redeRelacionamento String?
  ativo              Boolean  @default(true)
  createdCheckinAt   DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  emailLogs          EmailLog[]
}

model MessageGroup {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  nomeGrupo       String   @unique
  mensagemPadrao  String   @default("")
  frequenciaEnvio String   @default("mensal")
  diaSemana       Int?
  diaMes          Int?
  horaEnvio       Int      @default(9)
  minutoEnvio     Int      @default(0)
  flyerUrl        String?
  ultimoEnvio     DateTime?
  proximoEnvio    DateTime?
  ativo           Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model EmailLog {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  grupo           String
  membroId        String   @db.ObjectId
  membroNome      String
  membroEmail     String?
  status          String   @default("pendente")
  dataAgendamento DateTime @default(now())
  dataEnvio       DateTime?
  mensagemEnviada String?
  erroMensagem    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  member Member @relation(fields: [membroId], references: [id], onDelete: Cascade)
}

model SystemConfig {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  automacaoAtiva    Boolean  @default(true)
  ultimaVerificacao DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// =========================
// ESCALA (culto / programação)
// - Não envia para membros.
// - Sempre dispara para AUTOMATION_EMAIL_TO (gatilho do Power Automate).
// - Controlado pelo scheduler (/api/emails/process) para enviar 1 por minuto.
// =========================

enum EscalaTipo {
  DIRIGENTE
  LOUVOR
  LOUVOR_ESPECIAL
  PREGACAO
  TESTEMUNHO
  APOIO
}

enum EscalaStatus {
  PENDENTE
  ENVIANDO
  ENVIADO
  ERRO
}

model GoogleIntegration {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  provider     String   @unique

  accessToken  String
  refreshToken String?
  scope        String?
  tokenType    String?
  expiryDate   DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
// =========================
// ESCALA (culto / programação)
// Integra com Google Calendar (import)
// Vincula responsável pelo NOME (opção A):
// - tenta achar Member.nome (case-insensitive)
// - se achar: grava membroId + membroNome
// - se não achar: grava nomeResponsavelRaw
// =========================

enum EscalaTipo {
  DIRIGENTE
  LOUVOR
  LOUVOR_ESPECIAL
  PREGACAO
  TESTEMUNHO
}

enum EscalaStatus {
  PENDENTE
  ENVIANDO
  ENVIADO
  ERRO
}
model Escala {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  tipo       EscalaTipo
  dataEvento DateTime

  // Opção A: vínculo por nome do banco (quando encontrar)
  membroId   String?  @db.ObjectId
  membroNome String?  // espelho do nome do Member (pra exibir rápido)

  // Sempre guarda o texto do responsável vindo do Google (fallback)
  nomeResponsavelRaw String?

  // Mensagem opcional fica só no app
  mensagem String?

  envioAutomatico Boolean      @default(true)
  enviarEm        DateTime
  status          EscalaStatus @default(PENDENTE)

  dataEnvio    DateTime?
  erroMensagem String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  member Member? @relation(fields: [membroId], references: [id], onDelete: SetNull)

  @@unique([tipo, dataEvento], name: "tipo_dataEvento")
}