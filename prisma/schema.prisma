generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Member {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  nome               String
  email              String?
  telefone           String?
  dataNascimento     DateTime?
  endereco           String?
  grupoPastoral      Boolean  @default(false)
  grupoDevocional    Boolean  @default(false)
  grupoVisitantes    Boolean  @default(false)
  grupoConvite       Boolean  @default(false)
  grupoSumidos       Boolean  @default(false)
  redeRelacionamento String?
  ativo              Boolean  @default(true)
  createdCheckinAt   DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  emailLogs EmailLog[]

  // ✅ inverso da relação com Escala
  escalas Escala[] @relation("MemberEscalas")
}

model MessageGroup {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  nomeGrupo       String   @unique
  mensagemPadrao  String   @default("")
  frequenciaEnvio String   @default("mensal")
  diaSemana       Int?
  diaMes          Int?
  horaEnvio       Int      @default(9)
  minutoEnvio     Int      @default(0)
  flyerUrl        String?
  ultimoEnvio     DateTime?
  proximoEnvio    DateTime?
  ativo           Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model EmailLog {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  grupo           String
  membroId        String   @db.ObjectId
  membroNome      String
  membroEmail     String?
  status          String   @default("pendente")
  dataAgendamento DateTime @default(now())
  dataEnvio       DateTime?
  mensagemEnviada String?
  erroMensagem    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  member Member @relation(fields: [membroId], references: [id], onDelete: Cascade)
}

model SystemConfig {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  automacaoAtiva    Boolean  @default(true)
  ultimaVerificacao DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model GoogleIntegration {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  provider     String   @unique

  accessToken  String
  refreshToken String?
  scope        String?
  tokenType    String?
  expiryDate   DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum EscalaTipo {
  DIRIGENTE
  LOUVOR
  LOUVOR_ESPECIAL
  PREGACAO
  TESTEMUNHO
  APOIO
}

enum EscalaStatus {
  PENDENTE
  ENVIANDO
  ENVIADO
  ERRO
}

model Escala {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  tipo       EscalaTipo
  dataEvento DateTime

  membroId            String? @db.ObjectId
  membroNome          String?
  nomeResponsavelRaw  String?
  mensagem            String?

  envioAutomatico Boolean      @default(true)
  enviarEm        DateTime
  status          EscalaStatus @default(PENDENTE)

  dataEnvio    DateTime?
  erroMensagem String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  member Member? @relation("MemberEscalas", fields: [membroId], references: [id], onDelete: SetNull)

  @@unique([tipo, dataEvento], name: "tipo_dataEvento")
}