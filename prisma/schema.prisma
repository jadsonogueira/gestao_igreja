generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////////
// MEMBER
//////////////////////////////////////////////////////

model Member {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  nome               String
  email              String?
  telefone           String?
  dataNascimento     DateTime?
  endereco           String?
  grupoPastoral      Boolean  @default(false)
  grupoDevocional    Boolean  @default(false)
  grupoVisitantes    Boolean  @default(false)
  grupoConvite       Boolean  @default(false)
  grupoSumidos       Boolean  @default(false)
  redeRelacionamento String?
  ativo              Boolean  @default(true)
  createdCheckinAt   DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  emailLogs EmailLog[]

  // inverso da relação com Escala
  escalas Escala[] @relation("MemberEscalas")
}

//////////////////////////////////////////////////////
// MESSAGE GROUP
//////////////////////////////////////////////////////

model MessageGroup {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  nomeGrupo       String   @unique
  mensagemPadrao  String   @default("")
  frequenciaEnvio String   @default("mensal")
  diaSemana       Int?
  diaMes          Int?
  horaEnvio       Int      @default(9)
  minutoEnvio     Int      @default(0)
  flyerUrl        String?
  ultimoEnvio     DateTime?
  proximoEnvio    DateTime?
  ativo           Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

//////////////////////////////////////////////////////
// EMAIL LOG
//////////////////////////////////////////////////////

model EmailLog {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  grupo           String
  membroId        String   @db.ObjectId
  membroNome      String
  membroEmail     String?
  status          String   @default("pendente")
  dataAgendamento DateTime @default(now())
  dataEnvio       DateTime?
  mensagemEnviada String?
  erroMensagem    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  member Member @relation(fields: [membroId], references: [id], onDelete: Cascade)
}

//////////////////////////////////////////////////////
// SYSTEM CONFIG
//////////////////////////////////////////////////////

model SystemConfig {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  automacaoAtiva    Boolean  @default(true)
  ultimaVerificacao DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

//////////////////////////////////////////////////////
// GOOGLE INTEGRATION
//////////////////////////////////////////////////////

model GoogleIntegration {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  provider     String   @unique

  accessToken  String
  refreshToken String?
  scope        String?
  tokenType    String?
  expiryDate   DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

//////////////////////////////////////////////////////
// ESCALA
//////////////////////////////////////////////////////

enum EscalaTipo {
  DIRIGENTE
  LOUVOR
  LOUVOR_ESPECIAL
  PREGACAO
  TESTEMUNHO
  APOIO
}

enum EscalaStatus {
  PENDENTE
  ENVIANDO
  ENVIADO
  ERRO
}

enum EscalaSource {
  GOOGLE
  MANUAL
}

model Escala {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  tipo       EscalaTipo
  dataEvento DateTime

  membroId           String? @db.ObjectId
  membroNome         String?
  nomeResponsavelRaw String?
  mensagem           String?

  // LEGADO
  nomeResponsavel String?
  horario         String?

  googleEventId    String?
  googleCalendarId String?
  source           EscalaSource @default(GOOGLE)
  lastSyncedAt     DateTime?

  envioAutomatico Boolean      @default(true)
  enviarEm        DateTime
  status          EscalaStatus @default(PENDENTE)

  dataEnvio    DateTime?
  erroMensagem String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  member Member? @relation("MemberEscalas", fields: [membroId], references: [id], onDelete: SetNull)

  @@unique([tipo, dataEvento], name: "tipo_dataEvento")

  // ✅ NOVO: índices para o import achar rápido pelo evento do Google
  @@index([googleCalendarId, googleEventId], name: "google_event")
  @@index([googleEventId], name: "googleEventId_idx")
}

//////////////////////////////////////////////////////
// ✅ BANCO DE CIFRAS — SONG
//////////////////////////////////////////////////////

model Song {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // Informações básicas
  title       String
  artist      String?
  originalKey String

  // Texto colado pelo usuário (importação)
  rawText String

  // Estrutura inteligente da cifra
  // partes -> linhas -> letra + acordes (posicionados)
  content Json

  // Acordes usados (normalizados) para busca
  chordsUsed String[] @default([])

  // Texto achatado (título + letra) para pesquisa
  searchIndex String @default("")

  // Tags livres (louvor, ceia, natal, congregacional...)
  tags String[] @default([])

  // ✅ inverso para SongListItem
  listItems SongListItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@index([searchIndex])
  @@index([originalKey])
}

//////////////////////////////////////////////////////
// ✅ LISTAS DE CIFRAS
//////////////////////////////////////////////////////

model SongList {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relação N:N
  items SongListItem[]

  // ✅ unique já cria índice (não duplicar com @@index)
  @@unique([name])
}

model SongListItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  listId    String   @db.ObjectId
  songId    String   @db.ObjectId
  order     Int      @default(0)

  createdAt DateTime @default(now())

  list SongList @relation(fields: [listId], references: [id], onDelete: Cascade)
  song Song     @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([listId, songId])
  @@index([listId])
  @@index([songId])
}